<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.deviived.moviequiz.controller.GameActivity">

    <LinearLayout
    android:layout_width="match_parent"
        android:layout_weight="1"
    android:layout_height="100dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/activity_gif_perso"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/perso" />

        <TextView
            android:id="@+id/activity_game_question_text"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="16000"
        />

    <Button
        android:id="@+id/activity_game_answer1_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:padding="5dp"
        android:text="Answer1"/>

    <Button
        android:id="@+id/activity_game_answer2_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:padding="5dp"
        android:text="Answer2"/>

    <Button
        android:id="@+id/activity_game_answer3_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:padding="5dp"
        android:text="Answer3"/>

    <Button
        android:id="@+id/activity_game_answer4_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="15sp"
        android:padding="5dp"
        android:text="Answer4"/>

</LinearLayout>