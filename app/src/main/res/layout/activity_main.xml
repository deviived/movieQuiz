<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity=""
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:textSize="22sp"
        android:text="Bienvenue dans Movie Quiz !"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/activity_gif_intro"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/intro" />

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:hint="Quel est ton nom ?"
        android:gravity="center"
        />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="25dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center_horizontal"
        android:text="Go !"/>

</LinearLayout>